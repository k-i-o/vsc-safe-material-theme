{
    "compilerOptions": {
      "target": "es6",                      
      "module": "commonjs",                 
      "moduleResolution": "node",           
      "esModuleInterop": true,              
      "outDir": "./dist/scripts",                  
      "rootDir": "./scripts",                     
      "strict": true,                       
      "skipLibCheck": true,                 
      "forceConsistentCasingInFileNames": true 
    },
    "include": [
      "./**/*"                            
    ],
    "exclude": [
      "node_modules"                        
    ]
}  